{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash",
            "args": [
              "-c",
              "~/.local/bin/smart-checkpoint.sh pre-modify \"$TOOL_NAME\" \"$SESSION_ID\""
            ],
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash",
            "args": [
              "-c",
              "~/.local/bin/smart-checkpoint.sh analyze-prompt \"$SESSION_ID\""
            ],
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash",
            "args": [
              "-c",
              "~/.local/bin/smart-checkpoint.sh session-start \"$SESSION_ID\" \"$SOURCE\""
            ],
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash",
            "args": [
              "-c",
              "# Count operations and checkpoint if batch detected\n~/.local/bin/smart-checkpoint.sh batch-detect \"$SESSION_ID\""
            ],
            "timeout": 3
          }
        ]
      }
    ]
  }
}
